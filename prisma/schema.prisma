generator client {
  provider = "prisma-client"
  output   = "../src/@types/prisma"
}

datasource db {
  provider = "postgresql"
}


enum USER_ROLE {
  ADMIN
  DEFAULT
}


model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  photo    String?
  posts    Post[]
}

model Post {
  id         String   @id @default(uuid())
  titulo     String
  conteudo   String
  created_at DateTime @default(now())

  usuarioId  String
  usuario    User     @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
}
